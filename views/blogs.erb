
<form action="/blogs" method="post">
  <ul class="select_blogs">
  <% @users.each do |follower| %>
    <fieldset>
      <input type="checkbox" name="users[][username]" value="<%= follower.username %>"><li class="select_blog"><%= follower.username %> : <%= follower.website %></li>
      <input type="hidden" name="users[][website]" value="<%= follower.website %>" />
    </fieldset>
  <% end %>
  </ul>
  <input type="submit" value="submit">
</form>
